<div class="loading-screen">
  <div class="loading-content">
    <div class="orbit-loader">
      <div class="center-sun"></div>
      <div class="orbit orbit-1">
        <div class="planet planet-1"></div>
      </div>
      <div class="orbit orbit-2">
        <div class="planet planet-2"></div>
      </div>
      <div class="orbit orbit-3">
        <div class="planet planet-3"></div>
      </div>
    </div>
    <p class="loading-text">Loading<span class="dot-1">.</span><span class="dot-2">.</span><span class="dot-3">.</span></p>
  </div>
</div>

<style>
  .loading-screen {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #1a1a2e;
    z-index: 9999;
    transition: opacity 0.5s ease-out, visibility 0.5s ease-out;
  }

  .loading-content {
    text-align: center;
  }

  .loading-text {
    margin-top: 2rem;
    font-size: 1.2rem;
    letter-spacing: 0.1em;
  }

  .loading-text span {
    opacity: 0;
    animation: dotAnimation 1.4s infinite;
  }

  .loading-text .dot-1 {
    animation-delay: 0s;
  }

  .loading-text .dot-2 {
    animation-delay: 0.2s;
  }

  .loading-text .dot-3 {
    animation-delay: 0.4s;
  }

  .orbit-loader {
    position: relative;
    width: 200px;
    height: 200px;
    margin: 0 auto;
  }

  .center-sun {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 30px;
    height: 30px;
    background-color: #f0e6d2;
    border-radius: 50%;
    box-shadow: 0 0 20px rgba(240, 230, 210, 0.4);
  }

  .orbit {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 2px solid rgba(240, 230, 210, 0.3);
    border-radius: 50%;
  }

  .orbit-1 {
    width: 80px;
    height: 80px;
    animation: orbit 4s linear infinite;
  }

  .orbit-2 {
    width: 120px;
    height: 120px;
    animation: orbit 6s linear infinite;
  }

  .orbit-3 {
    width: 160px;
    height: 160px;
    animation: orbit 8s linear infinite;
  }

  .planet {
    position: absolute;
    width: 12px;
    height: 12px;
    background-color: #f0e6d2;
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(240, 230, 210, 0.4);
  }

  .planet-1 {
    top: -6px;
    left: 50%;
    transform: translateX(-50%);
  }

  .planet-2 {
    top: -6px;
    left: 50%;
    transform: translateX(-50%);
  }

  .planet-3 {
    top: -6px;
    left: 50%;
    transform: translateX(-50%);
  }

  @keyframes orbit {
    from {
      transform: translate(-50%, -50%) rotate(0deg);
    }
    to {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  @keyframes dotAnimation {
    0% { opacity: 0; }
    20% { opacity: 0; }
    50% { opacity: 1; }
    100% { opacity: 0; }
  }
</style>

<script>
  const loadingScreen = document.querySelector('.loading-screen') as HTMLElement;

  setTimeout(() => {
    if (loadingScreen) {
      loadingScreen.style.opacity = '0';
      loadingScreen.style.visibility = 'hidden';
      const event = new CustomEvent('loadingComplete');
      document.dispatchEvent(event);
    }
  }, 2000);
</script>

