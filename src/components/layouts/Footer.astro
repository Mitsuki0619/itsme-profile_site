<style>
  .footer {
    background-color: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    color: #ffffff;
    padding: 4rem 2rem 2rem;
    position: relative;
    overflow: hidden;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(25, 33, 60, 0.3), transparent);
    z-index: -1;
  }

  .footer-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer h3 {
    color: #3498db;
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    font-weight: 500;
    position: relative;
    display: inline-block;
  }

  .footer h3::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 40px;
    height: 2px;
    background: linear-gradient(90deg, #3498db, transparent);
  }

  .footer-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-nav li {
    margin-bottom: 0.8rem;
  }

  .footer-nav a, .social-link, .email-link {
    color: #f0f0f0;
    text-decoration: none;
    transition: color 0.3s ease, transform 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-nav a:hover, .social-link:hover, .email-link:hover {
    color: #3498db;
    transform: translateX(5px);
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .icon {
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
  }

  .social-link:hover .icon, .email-link:hover .icon {
    transform: scale(1.2);
  }

  .footer-bottom {
    margin-top: 3rem;
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
  }

  .copyright {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 3rem 1.5rem 1.5rem;
    }

    .footer-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .social-links {
      flex-direction: row;
      flex-wrap: wrap;
    }

    .social-link, .email-link {
      margin-right: 1rem;
    }
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
  }

  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .email-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #f0f0f0;
    text-decoration: none;
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .email-link:hover {
    color: #3498db;
    transform: translateX(5px);
  }

  .icon {
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
  }

  .email-link:hover .icon {
    transform: scale(1.2);
  }
</style>

