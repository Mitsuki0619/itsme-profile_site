---
import Layout from "../components/layouts/Layout.astro";
import LoadingScreen from "../components/layouts/LoadingScreen.astro";
import SpaceBackground from "../components/layouts/SpaceBackground.astro";
import AboutMe from "../sections/about-me/components/AboutMe.astro";
import Articles from "../sections/articles/components/Articles.astro";
import ColoredMessages from "../sections/colored-messages/components/ColoredMessages.astro";
import GalaxyMV from "../sections/mv/components/GalaxyMV/GalaxyMV";
import Portfolios from "../sections/portfolios/components/Portfolios.astro";
---

<Layout title="It's me, Mitsuki Iwamura" description="岩村充基のプロフィールサイトです。">
  <LoadingScreen />
  <div id="content" class="hidden">
    <SpaceBackground />
    <main>
      <div class="mv-section">
        <GalaxyMV client:load />
      </div>
      <div class="content-section">
        <ColoredMessages/>
        <AboutMe />
        <Portfolios />
        <Articles />
      </div>
    </main>
  </div>
</Layout>

<style>
  main {
    position: relative;
    z-index: 1;
  }

  .mv-section {
    position: relative;
    z-index: 2;
    background: rgba(0, 0, 0, 0.85);
  }

  .content-section {
    position: relative;
    z-index: 1;
  }

  /* ColoredMessagesセクションの背景を設定 */
  .content-section :global(.fixed) {
    background: rgba(0, 0, 0, 0.9);
  }
</style>

