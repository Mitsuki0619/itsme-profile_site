---
// ArticleCardSkeleton component
---

<div class="article-card-skeleton" aria-busy="true" aria-live="polite">
  <div class="card-content">
    <div class="emoji-container skeleton-emoji">
      <div class="skeleton-pulse"></div>
    </div>
    <div class="article-content">
      <div class="skeleton-title">
        <div class="skeleton-pulse"></div>
      </div>
      <div class="skeleton-description">
        <div class="skeleton-pulse"></div>
        <div class="skeleton-pulse"></div>
        <div class="skeleton-pulse"></div>
      </div>
    </div>
  </div>
  <span class="sr-only">記事をロード中...</span>
</div>

<style>
  .article-card-skeleton {
    position: relative;
    display: block;
    border-radius: 20px;
    overflow: hidden;
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
  }

  .card-content {
    position: relative;
    z-index: 2;
    background-color: rgba(40, 40, 40, 0.6);
    border-radius: 18px;
    display: flex;
    align-items: stretch;
    height: 160px;
    margin: 2px;
    backdrop-filter: blur(10px);
  }

  .emoji-container {
    width: 160px;
    height: 160px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(51, 51, 51, 0.7);
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    flex-shrink: 0;
    border-top-left-radius: 18px;
    border-bottom-left-radius: 18px;
  }

  .skeleton-emoji {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
  }

  .article-content {
    padding: 1.25rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .skeleton-title {
    height: 1.5rem;
    width: 70%;
    margin-bottom: 1rem;
    border-radius: 4px;
    overflow: hidden;
  }

  .skeleton-description {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .skeleton-description .skeleton-pulse {
    height: 1rem;
    border-radius: 4px;
    overflow: hidden;
  }

  .skeleton-description .skeleton-pulse:nth-child(1) {
    width: 100%;
  }

  .skeleton-description .skeleton-pulse:nth-child(2) {
    width: 90%;
  }

  .skeleton-description .skeleton-pulse:nth-child(3) {
    width: 80%;
  }

  .skeleton-pulse {
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.2) 50%,
      rgba(255, 255, 255, 0.1) 100%
    );
    background-size: 200% 100%;
    animation: pulse 1.5s ease-in-out infinite;
  }

  @keyframes pulse {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  @media (max-width: 600px) {
    .card-content {
      flex-direction: row;
      height: 120px;
    }

    .emoji-container {
      width: 120px;
      height: 120px;
    }

    .skeleton-emoji {
      width: 60px;
      height: 60px;
    }

    .article-content {
      padding: 0.75rem;
    }

    .skeleton-title {
      height: 1.2rem;
      margin-bottom: 0.75rem;
    }

    .skeleton-description .skeleton-pulse {
      height: 0.8rem;
    }
  }
</style>

