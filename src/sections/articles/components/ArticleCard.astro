---
interface Props {
	title: string;
	description: string;
	link: string;
	emoji: string;
	index: number;
}

const { title, description, link, emoji, index } = Astro.props;
---

<a href={link} class="article-card">
  <div class="card-content">
    <div class="emoji-container">
      <span class="emoji">{emoji}</span>
    </div>
    <div class="article-content">
      <h3 class="article-title">{title}</h3>
      <p class="article-description">{description}</p>
    </div>
  </div>
</a>

<style>
  .article-card {
    position: relative;
    display: block;
    text-decoration: none;
    border-radius: 20px;
    overflow: hidden;
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
  }

  .article-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, rgba(255, 77, 0, 0.7), rgba(255, 154, 0, 0.7), rgba(255, 77, 0, 0.7));
    background-size: 200% 200%;
    border-radius: 20px;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
    z-index: 1;
    pointer-events: none;
  }

  .article-card:hover::before {
    opacity: 1;
    animation: gradientShift 3s ease infinite;
  }

  .article-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(255, 77, 0, 0.4);
  }

  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .card-content {
    position: relative;
    z-index: 2;
    background-color: rgba(0, 0, 0, 0.6);
    border-radius: 18px;
    display: flex;
    align-items: stretch;
    height: 160px;
    margin: 2px;
    backdrop-filter: blur(10px);
  }

  .emoji-container {
    width: 160px;
    height: 160px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(51, 51, 51, 0.7);
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    flex-shrink: 0;
    border-top-left-radius: 18px;
    border-bottom-left-radius: 18px;
  }

  .emoji {
    font-size: 4rem;
    line-height: 1;
  }

  .article-content {
    padding: 1.25rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    overflow: hidden;
  }

  .article-title {
    color: #ffffff;
    font-size: 1.25rem;
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-weight: normal;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .article-description {
    color: #f0f0f0;
    font-size: 0.9rem;
    line-height: 1.4;
    margin: 0;
    opacity: 0.8;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .article-card:hover::after {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(45deg, rgba(255, 77, 0, 0.8), rgba(255, 154, 0, 0.8), rgba(255, 77, 0, 0.8));
    background-size: 200% 200%;
    border-radius: 22px;
    z-index: 0;
    filter: blur(10px);
    opacity: 0.8;
    animation: gradientShift 3s ease infinite;
  }

  @media (max-width: 600px) {
    .card-content {
      flex-direction: row;
      height: 120px;
    }

    .emoji-container {
      width: 120px;
      height: 120px;
      border-right: 1px solid rgba(255, 255, 255, 0.1);
      border-bottom: none;
    }

    .emoji {
      font-size: 3rem;
    }

    .article-content {
      padding: 0.75rem;
    }

    .article-title {
      font-size: 1rem;
      margin-bottom: 0.25rem;
    }

    .article-description {
      font-size: 0.8rem;
      -webkit-line-clamp: 2;
    }
  }
</style>

