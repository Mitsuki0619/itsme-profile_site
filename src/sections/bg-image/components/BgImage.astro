---
import { Image } from "astro:assets";
import bgImage from "../../../assets/images/bg-image-1.png";
---

<section class="bg-image">
  <div class="image-container">
    <Image
      src={bgImage}
      alt="Misty landscape with red lights"
      width="1920"
      height="1080"
    />
    <div class="overlay"></div>
  </div>
  <div class="content">
    <h2>Into the Mist</h2>
    <p>Where technology meets tranquility, we find our path forward. Every journey begins with a single step into the unknown.</p>
  </div>
</section>

<style>
  .bg-image {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 0;
  }

  .image-container {
    position: absolute;
    inset: 0;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .content {
    position: relative;
    z-index: 10;
    max-width: 80ch;
    text-align: center;
  }

  h2 {
    color: #ffffff;
    font-size: 3.5rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.25rem;
    line-height: 1.6;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }

  @media (min-width: 768px) {
    h2 {
      font-size: 4.5rem;
    }

    p {
      font-size: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    h2 {
      font-size: 5.5rem;
    }
  }
</style>

